@model IEnumerable<DonaldsonMotorsThree.Models.Customer>

@using DonaldsonMotorsThree.Models

@{
    ViewBag.Title = "Index";
}
<br/>
<br/>

<h4 style="text-align: center">Customer List</h4>


<table class="table" id="customer">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelephoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
      
        </tr>
    </thead>

@foreach (var item in Model)
{
    <tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressLine1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressLine2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Postcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelephoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>

        <td>
            @Html.HiddenFor(modelItem => item.CustomerId)
        </td>
        


        <td>
            <a type="button" class="btn btn-primary btn-sm" href="@Url.Action("Edit", new {Id = item.CustomerId})">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a type="button" class="btn btn-success btn-sm" href="@Url.Action("Details", new {Id = item.CustomerId})">
                <span class="glyphicon glyphicon-list"></span>

            </a>
            <button data-customer-id="@item.CustomerId" class="btn btn-danger btn-sm js-delete" onclick="javascript: deleteCustomer(this, @item.CustomerId);">
                <span class="glyphicon glyphicon-trash"></span>
            </button>

        </td>
    </tr>
    </tbody>
}

</table>
@Html.Partial("_CreateButtonPartial")


@section scripts
{
    <script>
        function deleteCustomer(button, custId) {

            bootbox.confirm("Are you sure you want to delete this item?",
                function(result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + custId.toString(),
                            method: "DELETE",
                            success: function() {
                                button.closest('tr').remove();
                            }
                        });
                    }
                });
        }

        $(document).ready(function() {
            $("#customer").DataTable();
        });
    </script>
}
