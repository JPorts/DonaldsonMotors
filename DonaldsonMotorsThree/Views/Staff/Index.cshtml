@model IEnumerable<DonaldsonMotorsThree.Models.Staff>
@using DonaldsonMotorsThree.Models

@{
    ViewBag.Title = "Index";
}

<br/>
<h3 style="text-align: center">Manage Staff</h3>


<table class="table" id="staff">
    <thead>
    <tr>
          
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreaOfExpertise)
        </th>
    </tr>
    </thead>

    @foreach (var item in Model) {
        <tbody>
        <tr>
   
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaOfExpertise)
            </td>
            <td>

                @Html.Partial("_TableButtonPartial", new SingleButtonPartial { StaffId = item.Id})
            </td>
        </tr>
        </tbody>
    }

</table>
<br/>
<p>
    <a type="button" class="btn btn-primary btn-sm" href="@Url.Action("AddStaff", "Account")">
        <span class="glyphicon glyphicon-plus"></span>
        <span>Create New</span>
    </a>
</p>

@section scripts
{
    <script>
        $(document).ready(function () {

            $("#staff").DataTable();

        });
    </script>
}
