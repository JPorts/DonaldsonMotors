@using DonaldsonMotorsThree.Models
@model IEnumerable<DonaldsonMotorsThree.Models.Booking>

@{
    ViewBag.Title = "ViewAll";
}
<br/>
<h3 style="text-align: center">View All Bookings</h3>
<br/>

<table class="table" id="booking">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DurationInDays)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Job.JobRequirements)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job.JobCost)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookingId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaidFor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DurationInDays)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Job.JobRequirements)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Job.JobCost)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.Partial("_TableButtonPartial", new SingleButtonPartial { BookingId = item.BookingId })
        </td>
    </tr>
        </tbody>
    }

</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#booking').dataTable();
        });
    </script>
}